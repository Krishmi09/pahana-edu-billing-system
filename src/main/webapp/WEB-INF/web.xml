<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Pahana Edu</display-name>

  <!-- Welcome files -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Session config (optional) -->
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>

  <!-- Your servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>

 <servlet>
    <servlet-name>CustomerController</servlet-name>
    <servlet-class>com.pahana.edu.controller.CustomerController</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>CustomerController</servlet-name>
    <url-pattern>/CustomerController</url-pattern>
</servlet-mapping>


  <!-- Items -->
  
<servlet>
    <servlet-name>ItemController</servlet-name>
    <servlet-class>com.pahana.edu.controller.ItemController</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>ItemController</servlet-name>
    <url-pattern>/ItemController</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>BillController</servlet-name>
    <servlet-class>com.pahana.edu.controller.BillController</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>BillController</servlet-name>
    <url-pattern>/bill/*</url-pattern>
</servlet-mapping>


  <!-- Reports -->
  <servlet>
    <servlet-name>ReportsServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.ReportsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportsServlet</servlet-name>
    <url-pattern>/ReportsServlet</url-pattern>
  </servlet-mapping>

</web-app>
</element>