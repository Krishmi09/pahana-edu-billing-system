<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Pahana Edu</display-name>

  <!-- Welcome files -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Session config (optional) -->
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>

  <!-- Your servlets -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddCustomerServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.AddCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCustomerServlet</servlet-name>
    <url-pattern>/AddCustomerServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditCustomerServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.EditCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditCustomerServlet</servlet-name>
    <url-pattern>/EditCustomerServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.DeleteCustomerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <url-pattern>/DeleteCustomerServlet</url-pattern>
  </servlet-mapping>

  <!-- Items -->
  <servlet>
    <servlet-name>AddItemServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.AddItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddItemServlet</servlet-name>
    <url-pattern>/AddItemServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditItemServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.EditItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditItemServlet</servlet-name>
    <url-pattern>/EditItemServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteItemServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.DeleteItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteItemServlet</servlet-name>
    <url-pattern>/DeleteItemServlet</url-pattern>
  </servlet-mapping>

  <!-- Reports -->
  <servlet>
    <servlet-name>ReportsServlet</servlet-name>
    <servlet-class>com.pahana.edu.servlet.ReportsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReportsServlet</servlet-name>
    <url-pattern>/ReportsServlet</url-pattern>
  </servlet-mapping>

</web-app>
</element>